extends layout 
block content 
    w3.card-4 
        header.w3-container.w3-teal 
            h1 Plantas  #[a.w3-btn.w3-round.w3-indigo(href="/plantas/adicionar") Adicionar Planta ]
        .w3-container 
            table.w3-table-all 
                tr 
                    th ID
                    th Freguesia
                    th Espécie
                    th Estado 
                    th Nº de Intervenções
                    th Eliminar
                each c in plantas
                    tr 
                        td 
                            a(href='/' + c._id)=  c._id
                        td=  c.Freguesia
                        td
                            a(href="/especies/" + c.Espécie)= c.Espécie
                        td=  c.Estado
                        td=  c["Número de intervenções"]
                        td
                            button.w3-btn.w3-round.w3-indigo.w3-margin-right
                                a(href="/plantas/eliminar/" + c._id) Eliminar

        footer.w3-container.w3-teal 
            h5 Generated by MapaVirtual::EngWeb2023 in #{d}