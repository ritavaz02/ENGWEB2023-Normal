extends layout 
block content 
    w3.card-4 
        header.w3-container.w3-teal 
            h1= lista[0].Espécie
            h2= lista[0]["Nome Científico"]
            button.w3-btn.w3-round.w3-indigo.w3-margin-right
                a(href="/") Voltar
        .w3-container 
        
            table.w3-table-all 
                tr 
                    th ID
                    th Freguesia
                    th Espécie
                    th Estado
                    th Número de intervenções
                
                each planta in lista
                    tr
                        td= planta._id
                        td= planta.Freguesia 
                        td= planta.Espécie
                        td= planta.Estado
                        td= planta["Número de intervenções"]

        button.w3-btn.w3-round.w3-indigo.w3-margin-right
            a(href="/") Voltar

        footer.w3-container.w3-teal 
            h5 Generated by MapaVirtual::EngWeb2023 in #{d}
            